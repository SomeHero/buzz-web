.sidebar
    .logo.hidden-xs(ui-sref='front')
        span GET
            span.color-red POLITICS
        .buzz
            | .buzz

    i.fa.fa-times-circle(ui-sref='{{self.article.return}}', title='Close')

    i.fa.fa-home(ui-sref='feed.all', title='Home')

    script.
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId="+CONFIG.fb_id;
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    a.fa.fa-facebook-official(href='http://www.facebook.com/share.php?u=http://getpolitics.buzz{{self.location.$$url}}&title=GET-POLITICS',
                              onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")

    a.fa.fa-twitter-square(ng-href='https://twitter.com/intent/tweet?text=http://getpolitics.buzz{{self.location.$$url}}',
                           onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")

    i.fa.fa-envelope-square(ng-click='')

.frame
    iframe(src="{{self.url}}", resize)